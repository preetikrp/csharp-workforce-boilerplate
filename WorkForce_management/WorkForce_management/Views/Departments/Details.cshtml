@model WorkForce_management.Models.ViewModels.DepartmentDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd>
    </dl>
</div>
@foreach(var employee in Model.Employees)
{
    <p>
        @employee.FirstName @employee.LastName
    </p>

}
<div>
    <a asp-action="Edit" asp-route-id="@Model.Department.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
